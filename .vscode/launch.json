    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Kubernetes Pod (Go)",
            "type": "cloudcode.kubernetes",
            "request": "attach",
            "language": "Go",
            "debugPort": 2345,
            "podSelector": {
                "app": "node-controller"
            },
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/"
        },
        {
            "name": "workload policy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder:k8s-policies-controller}/main.go",
            "cwd": "${workspaceFolder:k8s-policies-controller}",
            "args": [
                "--zap-devel",
                "--zap-encoder=console",
                "--zap-log-level=debug",
                "--kind=gcpworkload"
            ]
        },
        {
            "name": "node policy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder:k8s-policies-controller}/main.go",
            "cwd": "${workspaceFolder:k8s-policies-controller}",
            "args": [
                "--zap-devel",
                "--zap-encoder=console",
                "--zap-log-level=debug",
                "--kind=node"
            ]
        },
        {
            "name": "gcpauth policy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder:k8s-policies-controller}/main.go",
            "cwd": "${workspaceFolder:k8s-policies-controller}",
            "args": [
                "--zap-devel",
                "--zap-encoder=console",
                "--zap-log-level=debug",
                "--kind=gcpauth"
            ]
        },
    ]
}
